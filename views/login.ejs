<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %> <%- include('./partials/boot.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container">
        <h1>Sign in</h1>
      <form action="/auth/login/password" method="post">
        <section>
          <label for="username">Username</label>
          <input
            id="username"
            name="username"
            type="text"
            autocomplete="username"
            required
            autofocus
          />
        </section>
        <section>
          <label for="current-password">Password</label>
          <input
            id="current-password"
            name="password"
            type="password"
            autocomplete="current-password"
            required
          />
        </section>
        <button class="btn btn-success" type="submit">Sign in</button>
      </form>
      <p>
        Not a User <br>
        <a href="/auth/register"
          ><button class="btn btn-primary">Register</button></a
        >
      </p>
    </div>
  </body>
</html>
